@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject EmployeeService EmployeeService
@inject ProjectService ProjectService
@inject LeavesService LeaveService
@inject NavigationManager NavigationManager

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-1">Tableau de Bord</h1>
            <p class="text-muted">Bienvenue dans votre espace administrateur</p>
        </div>
        <div class="date-display p-2 rounded-3 bg-light">
            <i class="bi bi-calendar3 me-2"></i>@DateTime.Now.ToString("dd MMMM yyyy")
        </div>
    </div>

    <div class="row g-4">
        <!-- Cartes statistiques -->
        <div class="col-12 col-md-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="placeholder-glow">
                            <div class="placeholder col-12 mb-3"></div>
                            <div class="placeholder col-4"></div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-primary-subtle rounded-circle p-3 me-3">
                                <i class="bi bi-people-fill fs-4 text-primary"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0">@employeeCount</h3>
                                <p class="text-muted mb-0">Salariés</p>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-primary" style="width: 75%"></div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="placeholder-glow">
                            <div class="placeholder col-12 mb-3"></div>
                            <div class="placeholder col-4"></div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-success-subtle rounded-circle p-3 me-3">
                                <i class="bi bi-building fs-4 text-success"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0">@projectCount</h3>
                                <p class="text-muted mb-0">Chantiers Actifs</p>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-success" style="width: 65%"></div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4">
            <div class="card stat-card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="placeholder-glow">
                            <div class="placeholder col-12 mb-3"></div>
                            <div class="placeholder col-4"></div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-danger-subtle rounded-circle p-3 me-3">
                                <i class="bi bi-calendar2-check fs-4 text-danger"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold mb-0">@leaveCount</h3>
                                <p class="text-muted mb-0">Demandes de Congés</p>
                            </div>
                        </div>
                        <div class="progress mt-3" style="height: 4px;">
                            <div class="progress-bar bg-danger" style="width: 45%"></div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Graphiques et tableaux supplémentaires -->
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Activité Récente</h5>
                    <div class="activity-timeline">
                        <div class="activity-item d-flex pb-3">
                            <div class="activity-icon bg-primary-subtle rounded-circle p-2 me-3">
                                <i class="bi bi-person-plus text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Nouveau salarié ajouté</h6>
                                <small class="text-muted">Il y a 2 heures</small>
                            </div>
                        </div>
                        <div class="activity-item d-flex pb-3">
                            <div class="activity-icon bg-success-subtle rounded-circle p-2 me-3">
                                <i class="bi bi-check-circle text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Chantier terminé</h6>
                                <small class="text-muted">Il y a 3 heures</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4">Actions Rapides</h5>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary"
                            onclick="@(() => NavigationManager.NavigateTo("/admin/employees"))">
                            <i class="bi bi-person-plus me-2"></i>Ajouter un Salarié
                        </button>
                        <button class="btn btn-outline-success"
                            onclick="@(() => NavigationManager.NavigateTo("/admin/projects"))">
                            <i class="bi bi-building-add me-2"></i>Nouveau Chantier
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        transition: transform 0.2s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .activity-timeline .activity-item:not(:last-child) {
        border-left: 2px solid #e9ecef;
        margin-left: 14px;
        padding-left: 25px;
    }

    .activity-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .date-display {
        font-size: 0.9rem;
        color: #6c757d;
    }
</style>

@code {
    private int employeeCount;
    private int projectCount;
    private int leaveCount;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var employees = await EmployeeService.GetEmployeesAsync();
            employeeCount = employees.Count;

            var projects = await ProjectService.GetProjectsAsync();
            projectCount = projects.Count;

            var leaveRequests = await LeaveService.GetLeavesValidationAsync();
            leaveCount = leaveRequests.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }
}